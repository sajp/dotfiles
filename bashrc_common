# don't put duplicate lines in the history. See bash(1) for more options
export HISTCONTROL=ignoreboth
export HISTSIZE=100000
export HISTFILESIZE=100000000

# append to the history file, don't overwrite it
shopt -s histappend

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# Expand the history size

# set edit mode to vi
set -o vi

# Aliases
alias up="cd .."
alias tu='top -o cpu' #cpu
alias tm='top -o vsize' #memory
alias tmux="tmux -2"

# set svn default editor
export SVN_EDITOR=vim
export EDITOR=vim

# svndiff command that uses vim to view svn diffs
svndiff()
{
  svn diff "${@}" | view -
}

# ignore .svn folders in tab complete
export FIGNORE=.svn

# source bash completion
source ~/.git-completion.bash

# setup prompt
source "$HOME/.bashrc_prompt"

function lust () {
    LUSTRE_DIR=/lustre/scratch109/sanger/sp12
    if test -d "$LUSTRE_DIR"; then
       cd "$LUSTRE_DIR"
    else
        ssh -t farm2-login "cd \"$LUSTRE_DIR\"; exec tcsh -l"
    fi
}
